<%- include("header") %>

<div class="ui main text container segment">

    <div class="ui huge header">Edit: <%= blog.title %></div>

    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]", placeholder="title" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]", placeholder="image url" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Text</label>
            <textarea name="blog[body]" required><%= blog.body %></textarea>
        </div>

        <input class="ui black button" type="submit" value="Submit">
    </form>

</div>

<%- include("footer") %>
